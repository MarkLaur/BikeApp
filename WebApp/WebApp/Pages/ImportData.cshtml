@page
@using WebApp.Models;
@model WebApp.Pages.ImportDataModel
@{
    ViewData["Title"] = "Import Data";
}

<div class="m-4">
    <h2 class="mb-4">Import stations</h2>
    <form enctype="multipart/form-data" asp-page-handler="stations" method="post">
        <input type="file" name="file" class="form-control mb-3">
        <button type="submit" class="btn btn-primary">Upload Stations</button>
    </form>

    <p class="m-4">@Model.StationsMessage</p>
</div>

<div class="m-4">
    <h2 class="mb-3">Import trips</h2>
    <form enctype="multipart/form-data" asp-page-handler="trips" method="post">
        <input type="file" name="file" class="form-control mb-3">
        <button type="submit" class="btn btn-primary">Upload Trips</button>
    </form>

    <p class="m-4">@Model.TripsMessage</p>
</div>

<div class="m-4">
    <h2 class="mb-3">Enter station</h2>
    <form enctype="multipart/form-data" asp-page-handler="station" method="post">
        <input class="form-control mb-3" type="number" min="1" step="1" name="id" placeholder="Station ID">
        <input class="form-control mb-3" type="text" maxlength="100" name="nameFin" placeholder="nameFin">
        <input class="form-control mb-3" type="text" maxlength="100" name="nameSwe" placeholder="nameSwe">
        <input class="form-control mb-3" type="text" maxlength="100" name="name" placeholder="name">
        <input class="form-control mb-3" type="text" maxlength="100" name="addressFin" placeholder="addressFin">
        <input class="form-control mb-3" type="text" maxlength="100" name="addressSwe" placeholder="addressSwe">
        <input class="form-control mb-3" type="text" maxlength="100" name="cityFin" placeholder="cityFin">
        <input class="form-control mb-3" type="text" maxlength="100" name="citySwe" placeholder="citySwe">
        <input class="form-control mb-3" type="text" maxlength="100" name="operatorName" placeholder="Operator name">
        <input class="form-control mb-3" type="number" min="1" step="1" name="capacity" placeholder="Capacity">
        <!--TODO: set minimum and maximum coordinates-->
        <input class="form-control mb-3" type="number" name="posX" placeholder="posX">
        <input class="form-control mb-3" type="number" name="posY" placeholder="posY">
        <button class="btn btn-primary" type="submit">Add Station</button>
    </form>

    <p class="m-4">@Model.StationMessage</p>
</div>

<div class="m-4">
    <h2 class="mb-3">Enter trip</h2>
    <form enctype="multipart/form-data" asp-page-handler="trip" method="post">
        <input class="form-control mb-3" type="datetime-local" name="departureTime" placeholder="Departure time">
        <input class="form-control mb-3" type="datetime-local" name="returnTime" placeholder="Return time">
        <input class="form-control mb-3" type="number" min="1" step="1" name="departureStation" placeholder="Departure station ID">
        <input class="form-control mb-3" type="number" min="1" step="1" name="returnStation" placeholder="Return station ID">
        <input class="form-control mb-3" type="number" min="10" step="1" name="distance" placeholder="Distance">
        <button class="btn btn-primary" type="submit">Add Trip</button>
    </form>

    <p class="m-4">@Model.TripMessage</p>
</div>